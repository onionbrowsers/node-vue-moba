$color = {
    'primary': #db9e3f
    'white': #ffffff
    'black': #000000
    'dark': #222222
    'grey': #999999
    'grey-1': #666666
    'light': #f9f9f9
    'dark-1': #333333
    'blue': #4394e4
}

// color
// for in遍历对象写法，分别是key和value
// {value}用来写入变量
for key, curColor in $color
    .text-{key}
        color curColor
    .bg-{key}
        background-color curColor

// border-right
.br
    border-right 1px solid #d4d9de

// text-align
for val in left right center
    .text-{val}
        text-align val

// border 1px
for val in top right bottom left
    .border-{val}
        border-{val} 1px solid #d4d9de

// font-size
$base-font-size = 1rem
$font-sizes = {
    xxs: 0.6154
    xs: 0.7692
    sm: 0.9231
    md: 1
    lg: 1.076
    xl: 1.2308
}

for sizeKey, size in $font-sizes
    .fs-{sizeKey}
        font-size: size * $base-font-size

// flex布局
.d-flex
    display flex
.flex-column
    flex-direction: column
.flex-1
    flex 1
.flex-grow-1
    flex-grow 1
.flex-wrap
    flex-wrap: wrap

$flex-jc = {
    start: flex-start
    end: flex-end
    center: center
    between: space-between
    around: space-around
}

for key,val in $flex-jc
    .jc-{key}
        justify-content: val

$flex-ai = {
    start: flex-start
    end: flex-end
    center: center
    stretch: stretch 
}

for key,val in $flex-ai
    .ai-{key}
        align-items: val

// spacing 边距
$spacing-types = {
    m: margin
    p: padding
}
$spacing-directions = {
    t: top
    b: bottom
    l: left
    r: right
}
$spacing-base-size = 1rem
$spacing-sizes = {
    '0': 0
    '1': 0.25
    '2': 0.5
    '3': 1
    '4': 1.5
    '5': 3
}

// 嵌套循环
for typeKey, type in $spacing-types
    for directionKey, direction in $spacing-directions
        for sizeKey, size in $spacing-sizes
            // .mt-1形式
            .{typeKey + directionKey}-{sizeKey}
                {type}-{direction}: size * $spacing-base-size
            // .m-1形式
            .{typeKey}-{sizeKey}
                {type}: size * $spacing-base-size
            // .mx-1和.my-1形式 水平和垂直方面
            .{typeKey}x-{sizeKey}
                {type}-left: size * $spacing-base-size
                {type}-right: size * $spacing-base-size
            .{typeKey}y-{sizeKey}
                {type}-top: size * $spacing-base-size
                {type}-bottom: size * $spacing-base-size

// button样式
.btn
    border none
    border-radius: 0.1538rem
    font-size: $font-sizes['sm'] * $base-font-size
    font-weight: 600
    line-height: 1.5rem

// width
.w-100
    width: 100%
.h-100
    height 100%

